package stringfonksiyonlarý;

import java.util.Scanner;

public class Uygulama2 {

	public static void main(String[] args) {
		Scanner klavye=new Scanner(System.in);
		System.out.println("Bir kelime giriniz:");
		String kelime=klavye.nextLine();
		System.out.println("Hangi karakteri deðiþtirmek istiyorsunuz?:");
		String eskikarakter=klavye.next();
		System.out.println("Hangi karakterle deðiþtirmek istiyorsunuz?:");
		String yenikarakter=klavye.next();
		System.out.println("Yeni kelime:"+kelime.replace(eskikarakter, yenikarakter));
		klavye.close();
	}
}
