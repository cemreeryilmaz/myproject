package stringfonksiyonlarý;

import java.util.Scanner;

public class Uygulama3 {

	public static void main(String[] args) {
		Scanner klavye=new Scanner (System.in);
		System.out.println("Bir kelime giriniz:");
		String kelime=klavye.nextLine();
		System.out.println("Kaçýncý karakterden baþlasýn?:");
		int baþlangýç=klavye.nextInt();
		System.out.println("Kaçýncý karakterde sonlansýn?:");
		int son=klavye.nextInt();
		System.out.println("Çekilen string:"+kelime.substring(baþlangýç-1, son));
	}
}
