package thisvesuperkullanýmý;

public class Çalýþan {
	
	String adsoyad;
	int sicilno;
	double maaþ;
	String kurum="Arel";
	
	public Çalýþan(String adsoyad, int sicilno, double maaþ) {
		this.adsoyad = adsoyad;//sýnýfýn içerisinden sýnýfa ait özelliði çaðýrýr.
		this.sicilno = sicilno;
		this.maaþ = maaþ;
		this.konuþ();//sýnýfýn içerisinden sýnýfa ait metodu çaðýrýr.
	}	
	
	public Çalýþan(String adsoyad, int sicilno, double maaþ, String kurum) {
		this(adsoyad,sicilno,maaþ);//sýnýfýn içerisinden yapýlandýrýcý metodu çaðýrýr.
		this.kurum = kurum;
	}

	public void konuþ(){
		System.out.println("Çalýþanýn adýsoyadý:"+this.adsoyad);
		System.out.println("Çalýþanýn sicil numarasý:"+this.sicilno);
		System.out.println("Çalýþanýn maaþý:"+this.maaþ);
		System.out.println("Çalýþanýn kurumu:"+this.kurum);
	}
	
	
}
