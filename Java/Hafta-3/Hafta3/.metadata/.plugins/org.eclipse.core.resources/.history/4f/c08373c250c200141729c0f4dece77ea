package bittabanlýoperatörler;

import java.util.Scanner;

public class Uygulama3 {

	public static void main(String[] args) {
		Scanner klavye=new Scanner(System.in);
		System.out.println("Baþlangýç deðerini giriniz:");
		int sayý=klavye.nextInt();
		System.out.println("Sola doðru kaç bit kaydýrýlsýn?:");
		System.out.println("Ýþlem sonucu:"+(sayý<<klavye.nextInt()));
		System.out.println("Ýþlem sonu sayý deðiþkenin içeriði:"+sayý);
		System.out.println("Saða doðru kaç bit kaydýrýlsýn?:");
		System.out.println("Ýþlem sonucu:"+(sayý>>klavye.nextInt()));
		
	}
}
