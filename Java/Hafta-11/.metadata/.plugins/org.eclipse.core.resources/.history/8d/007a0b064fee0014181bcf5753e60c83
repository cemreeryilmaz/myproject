package statickullanýmý;

public class Uygulama5 {

	public static void main(String[] args) {
		Çalýþan çalýþan=new Çalýþan(1234, "Ahmet", "Vatan", 3000);
		çalýþan.çalýþ();//Erken baðlama(Static binding-Early binding)
		Çalýþan çalýþan2=new Öðretmen(1235, "Hasan", "Kurt", 4000);
		çalýþan2.çalýþ();//Geç baðlama(Dynamic binding-Late binding)
		//çalýþan nesnesinin hangi çalýþ metodunu kullanacaðý kod compile edildiðinde
		//bellidir, buna erken baðlama denir.
		//çalýþan2 nesnesi öðretmen sýnýfýný referans gösterdiði için çalýþ metodunun
		//çalýþan sýnýfýndan mý yoksa öðretmen sýnýfýndan mý kullanacaðý belli deðildir.
		//Belirlenmisi için kodun çalýþmasý gerekir. Çalýþma anýnda belirlendiði için
		//buna geç baðlama denir.
	}
}
