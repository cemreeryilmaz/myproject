<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSayac"
        android:text="0"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnArtır"
        android:text="Artır"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnArtır_OnClick"/>

    <Button
        android:id="@+id/btnAzalt"
        android:text="Azalt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnAzalt_OnClick"/>

    <Button
        android:id="@+id/btnSıfırla"
        android:text="Sıfırla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnSıfırla_OnClick"/>

</LinearLayout>
