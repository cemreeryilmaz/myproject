        android:layout_height="wrap_content"
        android:id="@+id/edtkitapad"
        android:hint="Kitap Ad"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnIptal"
            android:text="Ä°ptal"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
